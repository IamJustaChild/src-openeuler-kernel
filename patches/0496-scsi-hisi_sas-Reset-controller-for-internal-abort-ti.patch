 		if (!list_empty(&sas_dev->list)) {
@@ -1569,7 +1569,8 @@ static void hisi_sas_terminate_stp_reject(struct hisi_hba *hisi_hba)
 			continue;
 
 		rc = hisi_sas_internal_task_abort(hisi_hba, device,

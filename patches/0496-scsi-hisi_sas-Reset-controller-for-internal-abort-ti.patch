 			dev_err(dev, "STP reject: abort dev failed %d\n", rc);
 	}
@@ -1729,7 +1730,8 @@ static int hisi_sas_abort_task(struct sas_task *task)
 						  &tmf_task);
 
 		rc2 = hisi_sas_internal_task_abort(hisi_hba, device,
